@model EmployeeListViewModel
@{
    ViewData["Title"] = "Employees";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="bi bi-people-fill"></i> Employees
    </h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-lg"></i> Create New Employee
    </a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class = "col-md-5">
                <label for="searchTerm" class="form-label">Search</label>
                <input type="text" name="searchTerm" id="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by name, email, position..." />
            </div>
            <div class="col-md-3">
                <label for="department" class="form-label">Department</label>
                <input type="text" name="department" id="department" value="@Model.Department" class="form-control" placeholder="Filter by department..." />
            </div>
            <div class="col-md-2">
                <label class = "form-label d-block">&nbsp;</label>
                <div class="form-check">
                    <input type="checkbox" name="includeInactive" id="includeInactive" class="form-check-input" @(Model.IncludeInactive ? "checked" : "") />
                    <label for="includeInactive" class="form-check-label">Include Inactive</label>
                </div>
            </div>
            <div class="col-md-2">
                <label class="form-label d-block">&nbsp;</label>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel-fill"></i> Search
                </button>
            </div>
        </form>
    </div>
</div>
<div class="card">
    <div class="card-header">
        <strong>Total Employees: @Model.TotalCount</strong>
    </div>
    <div class="card-body">
        @if (Model.Employees.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th> Name </th>
                            <th> Email </th>
                            <th> Position </th>
                            <th> Department </th>
                            <th> Hire Date </th>
                            <th> Status </th>
                            <th> Actions </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model.Employees)
                        {
                            <tr>
                                <td> @employee.FullName </td>
                                <td> @employee.Email </td>
                                <td> @employee.Position </td>
                                <td> @employee.Department </td>
                                <td> @employee.HireDate.ToString("yyyy-MM-dd") </td>
                                <td>
                                    <employee-status is-active="@(employee.IsActive)" />
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-sm btn-info" title="Details">
                                            <i class="bi bi-info-circle-fill"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-primary" title="Edit">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No employees found matching the criteria.
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.Department) || Model.IncludeInactive)
                {
                    <a asp-action="Index" class="btn btn-sm btn-secondary ms-3">
                        <i class="bi bi-arrow-left-circle-fill"></i> Clear Filters
                    </a>
                }
            </div>
        }
    </div>
</div>