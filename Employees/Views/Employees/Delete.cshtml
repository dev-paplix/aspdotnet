@model EmployeeViewModel
@{
    ViewData["Title"] = "Delete Employee";
}
<h1>
    <i class="bi bi-exclamation-triangle-fill"></i> Delete Employee
</h1>

<h3>Are you sure you want to delete this? </h3>

<div class= "card mt-4">
    <div class="card-header bg-warning">
        <h4 class="mb-0">@Model.FullName</h4>
    </div>
    <div class="card-body">
        <dl class="row">

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Department</dt>
            <dd class="col-sm-9">@Model.Department</dd>

            <dt class="col-sm-3">Position</dt>
            <dd class="col-sm-9">@Model.Position</dd>
                        
            <dt class="col-sm-3">Hire Date</dt>
            <dd class="col-sm-9">@Model.HireDate.ToString("yyyy-MM-dd")</dd>
        </dl>
        <div class="alert alert-warning">
          <i class="bi bi-info-circle"></i> Are you sure you want to delete this employee?
        </div>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle-fill"></i> Cancel
            </a>
        </form>
    </div>
</div>